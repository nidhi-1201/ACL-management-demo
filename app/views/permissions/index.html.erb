<p id="notice"><%= notice %></p>

<h1>Permission</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permissions.each do |per| %>
      <tr>
        <td><%= per.name %></td>
        <td><%= link_to 'Show', per%></td>
        <td><%= link_to 'Edit', edit_permission_path(per) %></td>
        <td><%= link_to 'Destroy', per, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Permission', new_permission_path %>
